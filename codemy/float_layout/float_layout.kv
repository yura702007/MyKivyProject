<Button>:
    font_size: 32
    size_hint: (.3, .3)

<MyWidget>:
    FloatLayout:
        size: root.width, root.height

        Button:
            pos_hint: {'x': 0, 'top': 1}
            text: 'Top Left'

        Button:
            pos_hint: {'x': .7, 'top': 1}
            text: 'Top Right'

        Button:
            text: 'Center'

        Button:
            text: 'Bottom Left'

        Button:
            pos_hint: {'x': 1 - self.size_hint_x, 'bottom': 1}
            text: 'Bottom Right'