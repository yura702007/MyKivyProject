<MyWidget>:
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 30
        spacing: 20

        Label:
            id: my_label
            text: 'Hello World'
            font_size: 32

        Button:
            text: 'Hello'
            font_size: 32
            size_hint: (.15, .12)
            background_color: (0, 0, 0, 0)
            pos_hint: {'center_x': .5}
            on_press: root.hello_on()
            Image:
                source: 'press.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y