<MyWidget>:

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        TextInput:
            id: calc_input
            text: '0'
            halign: 'right'
            font_size: 65
            size_hint: (1, .15)

        GridLayout:
            cols: 4
            rows: 5

#            rows_1
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: '%'
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: 'CE'
            Button:
                id: clear
                size_hint: (.2, .2)
                font_size: 32
                text: 'C'
                on_press: root.clear()
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: '/'
                on_press: root.divide()

#           rows_2
            Button:
                size_hint: (.2, .2)
                background_color: (0.46, 0.56, 0.51, 1)
                font_size: 32
                text: '7'
                on_press: root.press_num_btn(7)
            Button:
                size_hint: (.2, .2)
                background_color: (0.46, 0.56, 0.51, 1)
                font_size: 32
                text: '8'
                on_press: root.press_num_btn(8)
            Button:
                size_hint: (.2, .2)
                background_color: (0.46, 0.56, 0.51, 1)
                font_size: 32
                text: '9'
                on_press: root.press_num_btn(9)
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: 'x'
                on_press: root.multiply()

#           rows_3
            Button:
                size_hint: (.2, .2)
                background_color: (0.46, 0.56, 0.51, 1)
                font_size: 32
                text: '4'
                on_press: root.press_num_btn(4)
            Button:
                size_hint: (.2, .2)
                background_color: (0.46, 0.56, 0.51, 1)
                font_size: 32
                text: '5'
                on_press: root.press_num_btn(5)
            Button:
                size_hint: (.2, .2)
                background_color: (0.46, 0.56, 0.51, 1)
                font_size: 32
                text: '6'
                on_press: root.press_num_btn(6)
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: '-'
                on_press: root.subtract()

#           rows_4
            Button:
                size_hint: (.2, .2)
                background_color: (0.46, 0.56, 0.51, 1)
                font_size: 32
                text: '1'
                on_press: root.press_num_btn(1)
            Button:
                size_hint: (.2, .2)
                background_color: (0.46, 0.56, 0.51, 1)
                font_size: 32
                text: '2'
                on_press: root.press_num_btn(2)
            Button:
                size_hint: (.2, .2)
                background_color: (0.46, 0.56, 0.51, 1)
                font_size: 32
                text: '3'
                on_press: root.press_num_btn(3)
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: '+'
                on_press: root.add()

#           rows_5
            Button:
                size_hint: (.2, .2)
                background_color: (0.46, 0.56, 0.51, 1)
                font_size: 32
                text: '+/-'
            Button:
                size_hint: (.2, .2)
                background_color: (0.46, 0.56, 0.51, 1)
                font_size: 32
                text: '0'
                on_press: root.press_num_btn(0)
            Button:
                size_hint: (.2, .2)
                background_color: (0.46, 0.56, 0.51, 1)
                font_size: 32
                text: '.'
                on_press: root.press_num_btn('.')
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: '='
                on_press: root.equals()