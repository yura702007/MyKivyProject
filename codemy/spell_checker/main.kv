<MyWidget>:

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 30
        spacing: 15

        Label:
            id: word_label
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            text: 'Enter a Word'
            font_size: 32

        TextInput:
            id: word_input
            multiline: False
            size_hint: (1, .5)

        Button:
            size_hint: (1, .4)
            font_size: 32
            text: 'Submit'
            on_press: root.press()