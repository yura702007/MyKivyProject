#: import Factory kivy.factory.Factory

<MyPopup@Popup>:
    auto_dismiss: False
    size_hint: (.6, .4)
    pos_hint: {'x': .2, 'top': .9}
    title: 'This is popup box'

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        Label:
            text: 'Text in popup'

        Button:
            text: 'Close Me'
            font_size: 24
            on_release: root.dismiss()

<MyWidget>:
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        Label:
            text: 'Popup Stuff'
            font_size: 32

        Button:
            text: 'Open Popup'
            font_size: 32
            on_release: Factory.MyPopup().open()