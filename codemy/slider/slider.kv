<MyWidget>:
    slider_text: slider_label
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 30
        spacing: 15

        Label:
            text: 'Slide the Slider'
            font_size: 32

        Label:
            id: slider_label

        Slider:
            id: slider
            min: 1
            max: 50
            step: 1
            orientation: 'horizontal'
            on_value: root.slider_it(*args)