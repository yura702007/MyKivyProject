#:kivy 2.0.0
#: import utils kivy.utils

<Button>:
    font_size: 32
    background_normal: ''
    background_color: utils.get_color_from_hex('#15ebab')

<TextInput>:
    multiline: False
    background_color: utils.get_color_from_hex('97f788')

<MyWidget>:
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 10
        spacing: 10

        Label:
            text: 'Name'
            font_size: 45
            background_color: (230/255.0, 122/255.0, 14/255.0, 1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
#            Text Properties
            color: (.9, .85, .3, 1)
            bold: True
            italic: True
            outline_color: (0.04, 0.28, 0.64)
            outline_width: 5

        TextInput:

        Button:
            background_color: utils.get_color_from_hex('#a30b16')
            text: 'Clear'