Screen:
    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {'center_x': .5, 'center_y': .5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDLabel:
            id: welcome_label
            text: 'Welcome'
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        MDTextFieldRound:
            id: user
            hint_text: 'username'
            icon_right: 'account'
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {'center_x': .5}
