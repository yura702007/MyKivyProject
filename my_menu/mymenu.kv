#:kivy 2.0.0

<UserSettings>:
    Button:
        text: 'My first Item'
        size_hint_y: None
        height: 44
        on_release: root.select('item1')
    Label:
        text: 'Unselectable item'
        size_hint_y: None
        height: 44
    Button:
        text: 'My second Item'
        size_hint_y: None
        height: 44
        on_release: root.select('item2')

<MyWidget>:
    orientation: 'vertical'
    padding: 20
    spacing: 10
    my_settings: my_settings

    Button:
        id: my_settings
        text: 'Settings'
        on_release:
            root.show_user_settings()

    Button:
        text: 'BUTTON ONE'

    Button:
        text: 'BUTTON TWO'

    Button:
        text: 'BUTTON THREE'

    Button:
        text: 'BUTTON FOUR'